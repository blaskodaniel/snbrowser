{
  "name": "@sensenet/react-typescript-boilerplate-documentbrowser",
  "version": "0.0.1",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "sensenet",
    "cps",
    "single page application",
    "boilerplate",
    "react",
    "typescript",
    "document",
    "browser"
  ],
  "scripts": {
    "fix:prettier": "prettier \"{,!(dist|temp|bundle)/**/}*.{ts,tsx}\" --write",
    "build": "rimraf bundle && webpack",
    "start": "webpack-dev-server --progress",
    "test": "jest --coverage",
    "lint": "eslint . --ext .tsx,.ts --cache"
  },
  "private": true,
  "publishConfig": {
    "access": "private"
  },
  "author": "Sense/Net <snteam@sensenet.com> (http://sensenet.com/)",
  "license": "GPL-2.0",
  "homepage": "https://sensenet.com",
  "devDependencies": {
    "@types/enzyme": "^3.10.3",
    "@types/jest": "^24.0.21",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "@types/react-redux": "^7.1.1",
    "@types/react-responsive": "^8.0.2",
    "@types/react-router-dom": "^5.1.2",
    "@types/redux": "^3.6.0",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "awesome-typescript-loader": "^5.2.1",
    "css-loader": "^3.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.3",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsdoc": "^8.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "file-loader": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.3.0",
    "jest": "^24.9.0",
    "lint-staged": "^13.1.0",
    "prettier": "^1.17.1",
    "rimraf": "^2.6.3",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "ts-config-webpack-plugin": "^1.3.1",
    "ts-jest": "^24.1.0",
    "tslib": "^1.9.3",
    "typescript": "^3.5.2",
    "url-loader": "^2.0.1",
    "webpack": "^4.32.2",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1"
  },
  "dependencies": {
    "@furystack/inject": "^4.0.2",
    "@furystack/logging": "^2.0.6",
    "@material-ui/core": "^4.5.2",
    "@material-ui/icons": "^4.5.1",
    "@sensenet/client-core": "^2.2.2",
    "@sensenet/client-utils": "^1.6.6",
    "@sensenet/default-content-types": "^2.0.2",
    "@sensenet/document-viewer-react": "^1.2.2",
    "@sensenet/hooks-react": "^1.0.1",
    "@sensenet/list-controls-react": "^1.3.12",
    "@sensenet/redux": "5.1.14",
    "clsx": "^1.0.4",
    "monaco-editor": "^0.17.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-moment": "^0.9.2",
    "react-redux": "^7.1.0",
    "react-responsive": "^7.0.0",
    "react-router-dom": "^5.0.1",
    "redux": "^4.0.4",
    "redux-di-middleware": "^4.1.0",
    "uuid": "^3.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "eslint --ext .tsx,.ts --cache --fix",
        "prettier --write",
        "git add"
      ],
      "*.{js,jsx}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "*.d.ts"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/test",
      "<rootDir>/src"
    ],
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/jest/cssTransform.js",
      "\\.(png|jpg|gif)$": "<rootDir>/jest/fileTransform.js"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.css$": "<rootDir>/jest/cssTransform.js",
      "^.+\\.(png|jpg|gif)$": "<rootDir>/jest/fileTransform.js"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig-base.json"
      }
    },
    "testMatch": [
      "**/test/*.+(ts|tsx|js)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest/setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/components/document-editor.tsx",
      "!src/components/document-viewer.tsx",
      "!src/index.tsx",
      "!src/helper.ts",
      "!src/hooks/*",
      "!src/service/*",
      "!src/context/*",
      "!src/store/*",
      "!src/utils/*"
    ],
    "coverageReporters": [
      "json",
      "html"
    ]
  }
}
